<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.distractme.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.distractme.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_distractions"
        android:name="com.example.distractme.ui.distractions.DistractionsFragment"
        android:label="@string/title_distractions"
        tools:layout="@layout/fragment_distractions" />

    <fragment
    android:id="@+id/navigation_tracker"
    android:name="com.example.distractme.ui.tracker.TrackerFragment"
    android:label="@string/title_tracker"
    tools:layout="@layout/fragment_tracker" />
</navigation>